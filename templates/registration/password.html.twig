{% extends 'base.html.twig' %}

{% block title %}Cambiar Contraseña
{% endblock %}

{% block body %}

	{% for flash_message in app.session.flashbag.get('notice') %}
		<div class="alert alert-warning" role="alert">
			{{ flash_message }}
		</div>
	{% endfor %}

	<form method="post" action="{{ path('app_change_passw_post') }}" onsubmit="return confirm('¿Está seguro de cambiar su contraseña?');">
		<input type="hidden" name="_token" value="{{ csrf_token( app.user.email) }}">

		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label">Contraseña actual</label>
			<input name="actual" type="password" class="form-control" id="exampleFormControlInput1" required>
		</div>
		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label">Nueva contraseña</label>
			<input name="nueva" type="password" class="form-control" id="exampleFormControlInput1" required minlength="6" maxlength="12">
		</div>
		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label">Repita la nueva contraseña</label>
			<input name="repite" type="password" class="form-control" id="exampleFormControlInput1" required minlength="6" maxlength="12">
		</div>
		<button class="btn btn-primary">Cambiar</button>
	</form>


{% endblock %}
